{
	"compilerOptions": {
		"target": "ESNext",
		"module": "ESNext",
		"moduleResolution": "Bundler",
		"declaration": true,
		"declarationMap": true,
		"outDir": "./dist",
		"strict": true,
		"noUncheckedIndexedAccess": true,
		"skipLibCheck": true,
		"lib": ["ESNext"],
		"jsx": "react-jsx",
		"jsxImportSource": "hono/jsx",
		"types": ["./worker-configuration.d.ts", "@types/bun"],
		"paths": {
			"@/*": ["./src/*"],
			"@test/*": ["./test/*"]
		}
	},
	"include": ["src/**/*", "test/**/*", "scripts/**/*"],
	"exclude": ["node_modules", "dist"]
}
