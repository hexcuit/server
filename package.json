{
	"name": "@hexcuit/server",
	"version": "0.11.1",
	"license": "MIT",
	"repository": {
		"type": "git",
		"url": "https://github.com/hexcuit/server"
	},
	"files": [
		"dist"
	],
	"type": "module",
	"exports": {
		".": {
			"types": "./dist/client.d.ts",
			"import": "./dist/client.js"
		}
	},
	"scripts": {
		"dev": "wrangler dev",
		"build": "bun run generate:client && tsup",
		"check": "bun run lint && bun run format && bun run knip",
		"check:fix": "bun run lint:fix && bun run format:fix && bun run knip:fix",
		"lint": "oxlint --type-aware --type-check",
		"lint:fix": "oxlint --fix --type-aware --type-check",
		"format": "oxfmt --check",
		"format:fix": "oxfmt",
		"knip": "knip",
		"knip:fix": "knip --fix",
		"test": "vitest --run",
		"test:coverage": "vitest --run --coverage",
		"changeset": "changeset",
		"generate:migration": "drizzle-kit generate",
		"generate:client": "bun scripts/generate-client.ts --fix",
		"generate:routes": "bun scripts/generate-routes.ts --fix",
		"fix:route-paths": "bun scripts/fix-route-paths.ts --fix",
		"generate:types": "wrangler types --env-interface CloudflareBindings",
		"db:migrate:dev": "wrangler d1 migrations apply hexcuit --local",
		"db:studio": "drizzle-kit studio --config drizzle.config.local.ts"
	},
	"dependencies": {
		"@hono/zod-openapi": "1.2.0",
		"hono": "4.11.3"
	},
	"devDependencies": {
		"@cf-wasm/resvg": "0.3.3",
		"@cf-wasm/satori": "0.3.3",
		"@changesets/changelog-github": "0.5.2",
		"@changesets/cli": "2.29.8",
		"@hono/swagger-ui": "0.5.3",
		"@libsql/client": "0.17.0",
		"@types/better-sqlite3": "7.6.13",
		"@types/node": "25.0.3",
		"@vitest/coverage-v8": "4.0.16",
		"better-sqlite3": "12.5.0",
		"drizzle-kit": "1.0.0-beta.9-e89174b",
		"drizzle-orm": "1.0.0-beta.9-e89174b",
		"drizzle-zod": "1.0.0-beta.9-e89174b",
		"knip": "5.80.1",
		"lefthook": "2.0.13",
		"oxfmt": "0.23.0",
		"oxlint": "1.38.0",
		"oxlint-tsgolint": "0.10.1",
		"tsup": "8.5.1",
		"typescript": "5.9.3",
		"vitest": "4.0.16",
		"wrangler": "4.58.0",
		"zod": "4.3.5"
	}
}
